
@{
    ViewBag.Title = "ApproveRequirement";
    List<Information_System.Models.RequestDocModel> d = null;
    if (ViewData["RequirementList"] != null)
    {
        d = ViewData["RequirementList"] as List<Information_System.Models.RequestDocModel>;
    }
}

<style>
    .width-200 {
        width: 200px;
    }
</style>

<div style="background-color: white; padding: 16px;" class="mt-2">
    <h2>Requirement list pending approval</h2>
    @*<div class="row">
        <div class="col-lg-2">
            <button type="button" class="btn btn-success width-200" data-toggle="modal" id="btnApprove" data-target="#approveAllModel" disabled="disabled">Approve</button>
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-danger width-200" data-toggle="modal" id="btnReject" data-target="#rejectModel" disabled="disabled">Reject</button>
        </div>
    </div>*@

    @if (d != null )
    {
        <div class="mt-3 table-responsive" id="tbList">
            <table class="tb-radius table table-hover table-striped">
                <thead style="background-color: #1F618D; color: white;">
                    <tr>
                        <th class="text-center"><input type="checkbox" id="chkAll" /></th>
                        <th>Subject</th>
                        <th>Reason Explain</th>
                        <th>Issue By</th>
                        <th>Issue Date</th>
                        <th>Plant/Department</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody class="table-body" id="tbody">
                    @foreach (var l in d)
                    {
                        <tr>
                            <td class="text-center"><input type="checkbox" onclick="chkSelectd();" id="@l.IS_ID" /></td>
                            <td>@l.SUBJECT</td>
                            <td>@l.REASON_EXPLAIN</td>
                            <td>@l.ISSUE_NAME</td>
                            <td>@l.ISSUE_DATE</td>
                            <td>@l.DEPARTMENT</td>
                            <td class='text-center'><a href="@Url.Action("ApproveRequest","Create")/@l.IS_ID" target="_blank" title="click for approve requirement"><img src="~/Image/journal-check.svg" width="21" /></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div id="Nolist" class="mt-3">
            <p>No result.</p>
        </div>
    }

</div>

